@page "/"
@inject IDarkModeService DarkModeService
@using MudBlazor

<PageTitle>ENEMScore</PageTitle>


<MudItem xs="12" md="8" class="items-left">
    <h1>
        <MudIcon Icon="@Icons.Material.Outlined.Home" />
        Bem Vindo ao ENEMScore!
    </h1>

    <p class="font-normal text-left">
        <i>Estamos aqui para ajudar você a alcançar seus objetivos no <strong>ENEM</strong>. <br> Explore nossos recursos e encontre o curso ideal para sua pontuação.</i>
    </p>
    <h3 class="text-3xl mt-6 flex items-center justify-left">
        Para começar: clique no menu superior esquerdo!
        <MudIcon Icon="@Icons.Material.Outlined.Menu" Class="ml-2" />
    </h3>

</MudItem>
<br>
<MudGrid>
    <MudItem class="items-center mx-auto mt-0">
        @if (DarkModeService.isDarkMode)

        {
    
            <MudImage Src="/img/logo-white.png"
                      Alt="Bem Vindo ao ENEMScore"
                      Class="responsive-image"
                      Style="margin-top: 100px; height: 150px" />
        }

        else

        {
            <MudImage Src="/img/logo-enemscore.png"
                      Alt="Bem Vindo ao ENEMScore"
                      Class="responsive-image"
                      Style="margin-top: 100px; height: 150px" />
        }
    </MudItem>
</MudGrid>

<MudGrid Spacing="2" style="margin-top: 150px">
    <MudItem xs="12" sm="4" md="4">
        <MudCard Style="box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.4);">
            <MudCardMedia 
                Image="img/Imagem1.jpg" 
                Height="200" 
                ObjectFit="cover" 
                LazyLoad="true" 
                Style="filter: brightness(0.8);" />
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="4" md="4">
        <MudCard Style="box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.4);">
            <MudCardMedia 
                Image="img/Imagem2.jpg" 
                Height="200" 
                ObjectFit="cover" 
                LazyLoad="true" 
                Style="filter: brightness(0.8);" />
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="4" md="4">
        <MudCard Style="box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.4);">
            <MudCardMedia 
                Image="img/Imagem3.png" 
                Height="200" 
                ObjectFit="cover" 
                LazyLoad="true" 
                Style="filter: brightness(0.8);" />
        </MudCard>
    </MudItem>
</MudGrid>






@code {
    protected override void OnInitialized()
    {
        DarkModeService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        DarkModeService.OnChange -= StateHasChanged;
    }
}
